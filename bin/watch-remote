SENT=false
 
while true; do
    git fetch > /dev/null
    if [ $(git log --oneline ..@{u} 2> /dev/null | wc -l | tr -d ' ') -ne '0' ]; then
        if [ "$SENT" = false ]; then
            notify-send -u low "New commits on remote"
            SENT=true
        fi
    else
        SENT=false
    fi
    sleep 10
done
