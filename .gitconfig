[user]
    name = Rafał Mirończyk
    email = voyageur.pl@gmail.com

[github]
    user = v0y

[color]
    ui = auto

[core]
    excludesfile = ~/.gitfiles/global-ignore

[alias]
    r = rebase
    rb = rebase -i --autosquash master
    rbm = rebase master
    rbi = rebase -i --autosquash
    rbc = rebase --continue
    rba = rebase --abort
    rbs = rebase --skip
    co = checkout
    ci = commit
    df = diff
    ph = push
    pl = pull
    st = status
    hard = reset --hard
    sth = stash
    sthl = stash list
    stha = stash apply

[push]
    default = current

